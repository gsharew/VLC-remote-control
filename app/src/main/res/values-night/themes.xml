<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Navigation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/headerandfootercolor</item>
        <item name="android:navigationBarColor">@color/headerandfootercolor</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:colorBackground">@color/bodycolor</item>
        <item name="popupMenuBackground">@color/headerandfootercolor</item>
        <item name="android:itemTextAppearance">@style/menuitemtextappearance</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#0D0E0D</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="menuitemtextappearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBarTheme" parent="Base.Widget.Design.TabLayout">
        <item name="android:background">@color/headerandfootercolor</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="NavigationTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/bodycolor</item>
    </style>

    <style name="AdmobViewTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/headerandfootercolor</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/purple_200</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

</resources>